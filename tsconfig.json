{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@fonts/*": [
        "public/fonts/*"
      ],
      "@icons/*": [
        "public/icons/*"
      ]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tina/config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}