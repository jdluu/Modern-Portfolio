---
interface Props {
  title?: string;
  items: string[];
  id?: string;
  className?: string;
  variant?: "primary" | "subtle";
}

const { title, items, id, className, variant = "primary" } = Astro.props;
---

<div class:list={["tt-column", className, { "variant-subtle": variant === "subtle" }]} aria-labelledby={id}>
  <h4 id={id} class="tt-subheading">{title}</h4>
  {items.length > 0 ? (
    <ul class={`tech-badge-list ${className ?? ""} ${variant === "subtle" ? "variant-subtle" : ""}`} aria-labelledby={id}>
      {items.map((t) => (<li><span class:list={["tech-pill", { "pill-subtle": variant === "subtle" }]}>{t}</span></li>))}
    </ul>
  ) : (
    <p class="section-content">No {title?.toLowerCase() ?? "items"} listed.</p>
  )}
</div>
