---
interface Props {
  title: string;
  items: string[];
  id: string;
}

const { title, items, id } = Astro.props;
---

<div class="tt-column" aria-labelledby={id}>
  <h4 id={id} class="tt-subheading">{title}</h4>
  {items.length > 0 ? (
    <ul class="tech-list" aria-label={title}>
      {items.map((t) => (<li><span class="tech-pill">{t}</span></li>))}
    </ul>
  ) : (
    <p class="section-content">No {title.toLowerCase()} listed.</p>
  )}
</div>
