<style>
    #nav-list {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0;
        padding-bottom: 0;
        list-style: none;
    }
    #nav-list li:first-child {
        margin-right: auto;
    }
    .button-link {
        text-decoration:none;
    }

    .list-item {
        margin-right: 1rem;
        margin-top: 0.5rem;
        text-decoration: none;
    }

    #home-button {
        all: unset;
        text-decoration: none;
        font-weight: bold;
        font-size: var(--large1-size);
        font-family: "Pacifico", Fallback, cursive;
        color: var(--text-color);
        background-color: var(--background-color);
        cursor: pointer;
        display: flex;
        justify-content: center;

    }

    .home-icon {
        width:75px;
        height:75px;
        fill: var(--text-color);
    }

    #nav-list li:not(:first-child):not(:last-child) {
        text-decoration: none;
        color: var(--text-color);
        background-color: var(--primary-button-color);
        border: 1px solid var(--text-color);
        font-weight: bold;
        font-size: var(--medium2-size);
        padding: 10px 15px;
        border-radius: 75px;
    }

    /*Simple css to style it like a toggle switch*/
    /* The switch - the box around the slider */

    .switch {
        position: relative;
        display: inline-block;
        width: 3.75rem;
        height: 2.25rem;
    }

    /* Hide default HTML checkbox */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: 0.4s;
        transition: 0.4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 1.625rem;
        width: 1.625rem;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: 0.4s;
        transition: 0.4s;
    }

    input:checked + .slider {
        background-color: #2196f3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196f3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }
</style>
