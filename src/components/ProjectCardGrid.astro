---
import ProjectCard from "../components/ProjectCard.astro";
const allProjects = await Astro.glob("../pages/projects/*.md");
---

<section class="content-section">
	<h2 id="projects" class="page-h2">Projects</h2>
	<p id="work-desc">
		<strong>Check out some of my most recent projects!</strong>
	</p>
	<div id="project-grid">
		{
			allProjects.map((project) => (
				<ProjectCard
					title={project.frontmatter.title}
					intro={project.frontmatter.intro}
					thumbnail={project.frontmatter.thumbnail}
					url={project.url}
				/>
			))
		}
	</div>
</section>

<style>
	.page-h2 {
		font-size: 1.75rem;
		margin-top: 0.5rem;
		margin-bottom: 0.5rem;
		margin-left: 1rem;
		text-decoration: underline;
		color: var(--text-color);
	}

	@media screen and (max-width: 768px) {
		.page-h2 {
			font-size: 1.375rem;
		}
	}

	#work-desc {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		text-align: center;
	}
	#project-grid {
		max-width: 75%;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-gap: 2rem;
		margin-left: auto;
		margin-right: auto;
	}
	@media screen and (max-width: 1024px) {
		#project-grid {
			justify-content: center;
			align-items: center;
			grid-template-columns: repeat(2, 1fr);
			grid-gap: 1rem;
			padding: 0 0 2rem;
		}
	}
	@media screen and (max-width: 768px) {
		#project-grid {
			justify-content: center;
			align-items: center;
			grid-template-columns: repeat(1, 1fr);
			grid-gap: 1rem;
			padding: 0 0 2rem;
		}
	}
</style>
