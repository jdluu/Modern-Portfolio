---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Jeffrey Luu studied Human Computer Interaction and Computer Science at UCSD. Specializing in web and mobile development, he has a passion for creating innovative and user-friendly experiences. Explore his portfolio and projects."
		/>
		<meta
			name="keywords"
			content="Jeffrey Luu, UCSD, web development, La Palma, software engineer, HTML, CSS, JS, React, Astro"
		/>
		<meta name="author" content="Jeffrey Luu" />
		<meta property="og:title" content="Jeffrey Luu - Developer | Designer" />
		<meta
			property="og:description"
			content="Jeffrey Luu studied Human Computer Interaction and Computer Science at UCSD. Specializing in web and mobile development, he has a passion for creating innovative and user-friendly experiences. Explore his portfolio and projects."
		/>
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />

		<link rel="preload" href="/styles/reset.css" as="style" />
		<link rel="preload" href="/styles/global.css" as="style" />
		<link rel="preload" href="/scripts/theme.js" as="script" />

		<link rel="stylesheet" href="/styles/reset.css" />
		<link rel="stylesheet" href="/styles/global.css" />
		<script type="text/javascript" src="/scripts/theme.js"></script>
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
		
		<script>
			declare global {
				interface Window {
					netlifyIdentity: any;
				}
			}

			if (window.netlifyIdentity) {
			  window.netlifyIdentity.on('init', (user: any) => {
				if (!user) {
				  window.netlifyIdentity.on('login', () => {
					document.location.href = '/admin/';
				  });
				}
			  });
			}
		  </script>
	</body>
</html>
