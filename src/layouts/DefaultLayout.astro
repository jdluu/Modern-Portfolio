---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

---

<html lang="en">
	<head>
		<MainHead />
		<!--CSS Reset -->
		<style>
			html {
				box-sizing: border-box;
				font-size: 16px;
			}

			*,
			*:before,
			*:after {
				box-sizing: inherit;
			}

			body,
			h1,
			h2,
			h3,
			h4,
			h5,
			h6,
			p,
			ol,
			ul {
				margin: 0;
				padding: 0;
				font-weight: normal;
			}

			ol,
			ul {
				list-style: none;
			}

			img {
				max-width: 100%;
				height: auto;
			}
		</style>

		<!-- Variables and Global CSS -->
		<style is:global>
			:root {
				/* Font Sizes */
				--small1-size: 0.375rem;
				--small2-size: 0.625rem;
				--small3-size: 0.875rem;

				--medium1-size: 1rem;
				--medium2-size: 1.375rem;
				--medium3-size: 1.75rem;

				--large1-size: 2.5rem;
				--large2-size: 3.5rem;
				--large3-size: 4.5rem;

				/* Default Light Theme */
				--text-color: #020b0d;
				--inverse-text-color: #fdf4f2;
				--background-color: #d4f2f7;
				--primary-button-color: #72d5e4;
				--secondary-button-color: #e5f7fa;
				--accent-color: #87dbe8;

			}

			[data-theme="dark"] {
				--text-color: #e6f9f3;
				--inverse-text-color: #fdf4f2;
				--background-color: #051510;
				--primary-button-color: #4dbcd5;
				--secondary-button-color: #0a1429;
				--accent-color: #244999;
			}

			/* Fonts */
			@font-face {
				font-family: "Lato";
				src: url("https://fonts.gstatic.com/s/lato/v17/S6uyw4BMUTPHjx4wWw.ttf")
					format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: "Pacifico";
				src: url("https://fonts.gstatic.com/s/pacifico/v17/FwZY7-Qmy14u9lezJ96A.ttf")
					format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			body {
				background-color: var(--background-color);
				color: var(--text-color);
				font-family: "Lato", Fallback, sans-serif;
				font-size: var(--medium1-size);
				overflow-x: hidden;
			}

			@media screen and (max-width: 768px) {
				body {
					font-size: var(--medium1-size);
				}
			}

			h1 {
				font-weight: bold;
				font-size: var(--large1-size);
				font-family: "Pacifico", Fallback, cursive;
				color: var(--text-color);
				margin-left: 1rem;
			}

			/* If screen is smaller than 768 px, shrink the h1 font size and remove the margins */
			@media screen and (max-width: 768px) {
				h1 {
					font-size: var(--medium3-size);
					margin-top: 0;
				}
			}

			h2 {
				font-size: var(--medium3-size);
				margin-top: 0.5rem;
				margin-bottom: 0.5rem;
				margin-left: 1rem;
				text-decoration: underline;
				color: var(--text-color);
			}

			@media screen and (max-width: 768px) {
				h2 {
					font-size: var(--medium2-size);
				}
			}

			.svg-icon {
				width: 50px;
				height: 50px;
				cursor: pointer;
				fill: var(--text-color);
			}
		</style>
	</head>
	<body>
		<Nav />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
